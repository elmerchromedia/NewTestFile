{% extends '::base.html.twig' %}

{% block title %}Forgot Password{% endblock %}
{% block css %}<link href="{{ asset('css/sample.css') }}" rel="stylesheet"> {% endblock %}

{% block body %}
<div class="col-md-6">
	<form action="{{ path('changepass') }}" class="form" id="frmForgotPass" method="POST" {{ form_enctype(form) }}>
        <div class="panel panel-default">
        <div class="panel-heading">Forgot Password</div>
        <div class="panel-body">
          <div id="error"></div>
          <div class="form-group">
          <label for="exampleInputEmail1">Please enter your email</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email Address'} }) }}
          </div>
          <div class="form-group">
            {{ form_widget(form.submitemail, { 'attr': {'class': 'btn btn-success', 'id' : 'btnsendemailreset'} }) }}
          </div>
        </div>
      </div>
	</form>
</div>
{% endblock %}
