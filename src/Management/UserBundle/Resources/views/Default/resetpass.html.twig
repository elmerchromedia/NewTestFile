{% extends '::base.html.twig' %}

{% block title %}Sign Up{% endblock %}
{% block css %}<link href="{{ asset('css/user.css') }}" rel="stylesheet"> {% endblock %}

{% block body %}
<div class="col-md-6">
	<form action="" class="form" id="formResetPass" method="POST" {{ form_enctype(form) }}>
    
     <div class="panel panel-default">
        <div class="panel-heading">Reset Password</div>
        <div class="panel-body">
           {% if error == 1 %}
         <div class="alert alert-danger">
            Credentials are invalid for password reset
         </div>
          {% elseif error == 2  %}
          <div class="alert alert-danger" id="">
            Password does not match
          </div>
          {%  elseif error == 0 %}
          <div class="alert alert-success">
            Password successfully reset. <a href="login">Login now </a>
          </div>
          {% else %}
        {% endif %}
           <div class="form-group">
              <label for="exampleInputEmail1">New Password</label>
              {{ form_widget(form.newpassword, { 'attr': {'class': 'form-control', 'placeholder': 'New password'} }) }}
          </div>
           <div class="form-group">
              <label for="exampleInputEmail1">Confirm Password</label>
              {{ form_widget(form.conpassword, { 'attr': {'class': 'form-control', 'placeholder': 'Confirm password'} }) }}
          </div>
        </div>
      </div>
	<input type="submit" class="btn btn-success pull-right" value="Update Password"/>
	</form>
</div>
{% endblock %}
